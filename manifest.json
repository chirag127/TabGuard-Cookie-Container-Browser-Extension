{
  "manifest_version": 3,
  "name": "Chromium Container Extension",
  "version": "1.0.0",
  "description": "A vanilla JS cookie swapping engine to simulate container tabs.",
  "permissions": [
    "cookies",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Switch Container"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
